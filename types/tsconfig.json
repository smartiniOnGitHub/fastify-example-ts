{
  "compilerOptions": {
    "checkJs": true,
    "esModuleInterop": true,
    "lib": [ "ES2017", "DOM" ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2017"
  },
  "include": [
    "/types/*.test-d.ts",
    "/types/*.d.ts"
  ]
}
